# Soundtrack Your Brand API Configuration
SYB_API_KEY=your_syb_api_key_here
SYB_API_URL=https://api.soundtrackyourbrand.com/v2/graphql

# Zone Configuration (comma-separated list of zone IDs)
ZONE_IDS=zone_id_1,zone_id_2,zone_id_3

# Monitoring Configuration
POLLING_INTERVAL=60          # Check interval in seconds (default: 60)
OFFLINE_THRESHOLD=600        # Offline threshold in seconds (default: 600 = 10 minutes)

# Pushover Configuration (Primary notification method)
PUSHOVER_TOKEN=your_pushover_app_token
PUSHOVER_USER_KEY=your_pushover_user_key

# Email Configuration (Fallback notification method)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=alert_recipient@example.com

# Application Configuration
LOG_LEVEL=INFO
DASHBOARD_URL=https://app.soundtrackyourbrand.com

# HTTP Configuration
REQUEST_TIMEOUT=30           # HTTP request timeout in seconds
MAX_RETRIES=5               # Maximum retry attempts for failed requests