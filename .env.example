# SYB API Configuration
SYB_API_KEY=your_soundtrack_api_key_here

# Monitoring Configuration
POLLING_INTERVAL=60
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL) - Required for persistent storage
DATABASE_URL=postgresql://username:password@host:port/database_name

# Optional: Email Configuration (for SMTP notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=your_email@gmail.com

# Optional: SMS Configuration (Twilio) - for SMS notifications
# SMS_ENABLED=false
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number
# SMS_CRITICAL_THRESHOLD=1800      # 30 minutes in seconds
# SMS_QUIET_HOURS_START=22         # 10 PM (24-hour format)
# SMS_QUIET_HOURS_END=7            # 7 AM (24-hour format)